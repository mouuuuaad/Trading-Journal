
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for the share page, but only for queries that filter by userId.
    // This prevents anyone from listing all trades for all users.
    // Write access is still restricted to the owner of the trades.
    match /trades/{tradeId} {
      allow get: if true;
      allow list: if query.filters.size() == 1 && 'userId' in query.filters[0];
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
