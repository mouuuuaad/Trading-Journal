rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Trades can only be read, created, updated or deleted by the user who owns them.
    match /trades/{tradeId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
