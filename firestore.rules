
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes to the entire database by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read their own user document
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Secure the trades collection
    match /trades/{tradeId} {
      // Only the authenticated owner of a trade can read, update or delete it.
      allow read, update, delete: if request.auth.uid == resource.data.userId;

      // Any authenticated user can create a trade, but they must set themselves as the owner.
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
