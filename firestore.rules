
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Trades can be read by anyone (for the public share page)
    // but only created, updated, or deleted by the user who owns them.
    match /trades/{tradeId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // User-specific settings (like enabling sharing) can only be read
    // and written by the authenticated user themselves.
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
