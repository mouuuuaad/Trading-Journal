
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'trades' collection
    match /trades/{tradeId} {
      // Anyone can read (get, list) the trade data.
      // This is necessary for the public sharing page to query trades by userId.
      allow read: if true;

      // Only the authenticated user who owns the trade can write (create, update, delete).
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
