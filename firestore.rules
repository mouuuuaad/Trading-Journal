rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Match any document in the 'trades' collection
    match /trades/{tradeId} {

      // PUBLIC READ ACCESS: Anyone can read trade data.
      // This is necessary for your public sharing feature to work.
      allow read: if true;

      // CREATE: A user can create a trade if:
      // 1. They are logged in (request.auth != null).
      // 2. The 'userId' field of the NEW document they are creating
      //    matches their own authentication UID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // UPDATE: A user can update a trade if:
      // 1. They are logged in.
      // 2. The 'userId' of the EXISTING document on the server
      //    matches their own authentication UID.
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // DELETE: A user can delete a trade if:
      // 1. They are logged in.
      // 2. The 'userId' of the EXISTING document on the server
      //    matches their own authentication UID.
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
